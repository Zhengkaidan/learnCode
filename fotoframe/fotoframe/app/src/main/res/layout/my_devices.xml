<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/mydevices_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:text="@string/mydevice"
            android:textSize="18sp"
            android:textColor="@color/grey"/>
        <Button
            android:id="@+id/mydevices_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/add" />
            <TextView
                android:id="@+id/tv_maindevice"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="53dp"
                android:gravity="center"
                android:text="@string/maindevice"
                android:textSize="18sp"
                android:textColor="@color/tv_focus"/>
            <TextView
                android:id="@+id/tv_sharedevice"
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="76dp"
                android:gravity="center"
                android:text="@string/sharedevice"
                android:textSize="16sp"
                android:textColor="@color/tv_nomarl"/>
            <View
                android:id="@+id/line_main"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="81dp"
                android:background="@color/tv_focus">
            </View>
            <View
                android:id="@+id/line_share"
                android:layout_width="66dp"
                android:layout_height="3dp"
                android:visibility="gone"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="81dp"
                android:background="@color/tv_focus">
            </View>
        <RelativeLayout
            android:id="@+id/havedevice"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/nodevice"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="212dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/iv_nodevice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="357dp"
                    android:text="@string/nodevice"
                    android:textSize="18sp"
                    android:textColor="#BCBCBC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="382dp"
                    android:layout_marginLeft="105dp"
                    android:text="@string/tobind_tip1"
                    android:textColor="#BCBCBC"
                    android:textSize="18sp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
