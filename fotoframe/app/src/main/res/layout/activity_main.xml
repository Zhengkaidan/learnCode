<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.fotoframe.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="59dp"
        android:background="@drawable/logo">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="211dp"
        android:background="@drawable/img_bottom"
        android:layout_marginTop="51dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/showphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="11dp"/>
        <FrameLayout
            android:id="@+id/fl_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="11dp">
            <VideoView
                android:id="@+id/videoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="66dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="66dp" />

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#60DCDCDC"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="11dp">
            <LinearLayout
                android:id="@+id/ll_rpb"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:orientation="vertical"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="22dp"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp">
        <Button
            android:id="@+id/takephoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/takephoto"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp">
        <Button
            android:id="@+id/selectphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selectphoto"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp">
        <Button
            android:id="@+id/upphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edge"
            android:text="上 传"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>
